      <div class="debtors">
        <h4>Debtors</h4>
        <table>
          <thead>
            <tr>
              <th>S/N</th>
              <th>Agent</th>
              <th>Debt</th>
            </tr>
          </thead>
          <tbody>
            <% debtors.forEach((item, index) => { %>
                <tr>
                  <td><%= index + 1 %> </td>
                  <td><%=item.user_name%></td>
                  <td><%=formatNumber(Math.abs(item.balance))%></td>
